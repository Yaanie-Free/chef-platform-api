{
  "name": "chefconnect-platform",
  "version": "1.0.0",
  "description": "A comprehensive, free-to-run private chef platform connecting customers with chefs in South Africa",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:web",
    "build:web": "cd web && npm run build",
    "build:production": "npm run build && npm run start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build .next node_modules/.cache",
    "clean:logs": "rimraf logs/*.log",
    "docker:build": "docker build -t chefconnect-platform .",
    "docker:run": "docker run -p 3000:3000 chefconnect-platform",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up --build -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "logs:tail": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "precommit": "npm run lint && npm run format:check && npm run test",
    "prepush": "npm run build && npm run test:coverage"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.38.4",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "embla-carousel-react": "^8.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "image-size": "^1.0.2",
    "isomorphic-dompurify": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.546.0",
    "multer": "^1.4.5-lts.1",
    "react-day-picker": "^9.11.1",
    "tailwind-merge": "^3.3.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.8",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "private-chef",
    "catering",
    "food-delivery",
    "south-africa",
    "booking-platform",
    "real-time-chat",
    "payment-processing",
    "responsive-design",
    "free-hosting"
  ],
  "author": "ChefConnect Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chefconnect/platform.git"
  },
  "bugs": {
    "url": "https://github.com/chefconnect/platform/issues"
  },
  "homepage": "https://chefconnect.co.za",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/chefconnect"
  }
}
